<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Recipe Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Recipe Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Cook Time</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Cook Time" name="CookTime" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Ingredients</label>
                    <textarea input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Ingredients" name="Ingredients" required></textarea>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter the Meal Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Instructions</label>
                    <input type="text" class="form-control" id="instructionsTextField" placeholder="" name="Instructions" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>